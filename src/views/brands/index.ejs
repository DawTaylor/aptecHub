<%- include('../partials/header.ejs') %>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Marcas</h1>
        <a href="/marcas/adicionar" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-plus fa-sm text-white-50"></i> Nova Marca</a>
    </div>

    <div class="row">
        <div class="col-lg-12">

            <%- messagesFlash('message_templates', locals)  %>

            <% brands.forEach( brand => { %>

            <!-- Collapsable Card Example -->
            <div class="card shadow mb-4">
                <!-- Card Header - Accordion -->
                <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button"
                    aria-expanded="true" aria-controls="collapseCardExample">
                    <h6 class="m-0 font-weight-bold text-primary"><%= brand.name %></h6>
                </a>
                <!-- Card Content - Collapse -->
                <div class="collapse show" id="collapseCardExample">
                    <div class="card-body">


                        <div class="row">

                            <div class="col-lg-2 py-2">
                                Total de Produtos
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= brand.Syncs[0] ? brand.Syncs[0].totalProducts : 0 %></div>

                            </div>
                            <div class="col-lg-2 py-2">
                                Armazenamento
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= brand.Syncs[0] ? brand.Syncs[0].size : 0 %></div>
                            </div>
                            <div class="col-lg-2 py-2">
                                Criado em
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= brand.Syncs[0] ? dateFormat(brand.Syncs[0].createdAt, "dd/mm/yyyy h:MM:ss TT") : "" %>
                                </div>
                            </div>
                            <div class="col-lg-2 py-2">
                                Existe atualização?
                                <div class="h5 mb-0 font-weight-bold text-gray-800">Sim</div>
                            </div>



                            <div class="col-lg-2">
                            </div>
                            <div class="col-lg-2">
                                <div class="float-right">
                                    <a href="/marcas/sincronizar/<%= brand.id %>" class="btn btn-primary btn-circle">
                                        <i class="fas fa-sync-alt"></i></a>
                                    <a href="/marcas/reiniciar/<%= brand.id %>" class="btn btn-primary btn-circle">
                                        <i class="fas fa-undo-alt"></i></a>
                                    <a href="/marcas/editar/<%= brand.id %>" class="btn btn-success btn-circle">
                                        <i class="fas fa-edit"></i></a>
                                    <a href="/marcas/excluir/<%= brand.id %>" class="btn btn-danger btn-circle">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-5">

                            <%#= JSON.stringify(brand.sync.production.products) %>
                            <% if(JSON.stringify(brand.sync.production) !== "{}"){ %>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Nome</th>
                                        <th scope="col">Estágio</th>
                                        <th scope="col" class="w-25">Status de Importação</th>
                                        <th scope="col" class="w-25">Status de Sincronização</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(brand.sync.production.products.length > 0 ){ %>
                                    <% brand.sync.production.products.forEach( product => { %>
                                    <tr>
                                        <th scope="row"><%= product.id %></th>
                                        <td><%= product.title %></td>
                                        <td><span class="badge badge-primary"><%= product.stage %></span></td>
                                        <td>
                                            <% if(typeof product.import !== undefined){ %>
                                            <span class="badge badge-primary"><%= product.import %></span>
                                            <% } %>
                                            <% if(typeof product.import !== undefined){ %>
                                            <span class="badge badge-primary">
                                            </span>
                                            <% } %>
                                        </td>
                                        <td>

                                        </td>
                                    </tr>
                                    <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                            <% } %>

                        </div>

                    </div>
                </div>
            </div>

            <% }) %>

        </div>
    </div>

</div>

<!-- /.container-fluid -->
<%- include('../partials/footer.ejs') %>